@model ReviewsSite.Models.Review
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
</head>
<body>

    <h4>Review</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Update">
                <div class="text-success">@ViewBag.Result</div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ReviewId" />
                <input type="hidden" asp-for="ToppingsId" />
                <div class="form-group">
                    <label asp-for="ReviewContent" class="control-label"></label>
                    <input asp-for="ReviewContent" class="form-control" />
                    <span asp-validation-for="ReviewContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReviewerName" class="control-label"></label>
                    <input asp-for="ReviewerName" class="form-control" />
                    <span asp-validation-for="ReviewerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReviewScore" class="control-label"></label>
                    <input asp-for="ReviewScore" class="form-control" />
                    <span asp-validation-for="ReviewScore" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a href="/Toppings/Details/@Model.ToppingsId">Back to Topping</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
