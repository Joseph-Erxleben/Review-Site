@model ReviewsSite.Models.Review
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="StyleSheet" type="text/css" href="~/styles/FormStyleSheet.css" />
</head>
<body>

    <h2>Review</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form class="submissionForm" asp-action="Create">
                <div class="text-success">@ViewBag.Result</div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ToppingsId" />
                <div class="form-group">
                    <label asp-for="ReviewerName" class="control-label"></label>
                    <input asp-for="ReviewerName" class="form-control" />
                    <span asp-validation-for="ReviewerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReviewContent" class="control-label"></label>
                    <input asp-for="ReviewContent" class="form-control" />
                    <span asp-validation-for="ReviewContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="ReviewScore">Rating</label>
                    <select id="ReviewScore" name="ReviewScore">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" id="sendBtn" />
                </div>
            </form>
        </div>
    </div>

    <div id="listBtn">
        <a href="/Toppings/Details/@Model.ToppingsId">Back to Topping</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
