@model ReviewsSite.Models.Toppings
@*
    
*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link rel="StyleSheet" type="text/css" href="~/styles/IndexStyleSheet.css" />
</head>
<body>
    <header>
        <div class="logo">
            <a href="/Toppings/Index"><img src="~/images/pizza_four_eyes.png" alt="pizzafoureyes" /></a>
        </div>
        <div class="headerContent">
            <h1>Four-Eye's Topping Review Site!</h1>
            <p><strong>Welcome to our website.</strong></p>
            <p><strong>This is where you will be able to review some of your favorite pizza toppings.</strong></p>
        </div>
    </header>

    <main>
        <div class="detailsBox">
            <h1>@Model.Name</h1>

            <div class="detailsImgBx">
                <img src="/images/@Model.Img" alt"@Image" />
            </div>
            <div class="content">
                <h2>Average Review: @Model.AverageReview() / 5</h2>
                <p>Is vegetarian: @Model.IsVegetarian</p>
                <p>@Model.Description</p>
            </div>
        </div>

        @foreach (var review in Model.Reviews)
        {
    <article class="boxContent">
        <div>
            <h3>@review.ReviewerName</h3>
            <h4>@review.ReviewScore / 5</h4>
            <p>@review.ReviewContent</p>

            <a href="/Review/Update/@review.ReviewId"><button id="sendBtn">Update</button></a>
            <a href="/Review/Delete/@review.ReviewId"><button id="sendBtn">Delete</button></a>
        </div>
    </article>
        }

        <p><a href="/Review/Create/?toppingId=@Model.Id"><button id="sendBtn">Write a review</button></a></p>

        <p>
            <a href="/Toppings/Index/"><button id="sendBtn">Home</button></a>
        </p>
    </main>
</body>
</html>
